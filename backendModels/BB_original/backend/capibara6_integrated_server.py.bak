# capibara6_integrated_server.py
# Servidor integrado principal para el proyecto Capibara6

from flask import Flask, request, jsonify, Response
import requests
import json
import os
from models_config import MODEL_CONFIGS, DEFAULT_MODEL, TIMEOUT
import logging

app = Flask(__name__)

# Configurar logging
logging.basicConfig(level=logging.INFO)
logger = logging.getLogger(__name__)

# Proxy para GPT-OSS-20B
@app.route('/api/chat', methods=['POST'])
def proxy_gpt_oss_20b():
    try:
        data = request.get_json()
        model_config = MODEL_CONFIGS.get('gpt_oss_20b')
        
        if not model_config:
            return jsonify({'error': 'Modelo GPT-OSS-20B no configurado'}), 404
        
        # Reenviar la solicitud al servidor remoto
        response = requests.post(
            model_config['endpoint'],
            json=data,
            timeout=TIMEOUT/1000  # Convertir de ms a segundos
        )
        
        return Response(
            response.content,
            status=response.status_code,
            content_type='application/json'
        )
    except requests.exceptions.RequestException as e:
        logger.error(f"Error al conectar con GPT-OSS-20B: {e}")
        return jsonify({'error': 'Error al conectar con el modelo GPT-OSS-20B'}), 500
    except Exception as e:
        logger.error(f"Error inesperado: {e}")
        return jsonify({'error': 'Error interno del servidor'}), 500

# Smart MCP integrado
@app.route('/api/mcp/analyze', methods=['POST'])
def smart_mcp_analyze():
    try:
        data = request.get_json()
        # Lógica simple de análisis MCP
        result = {
            'status': 'success',
            'message': 'Análisis MCP completado',
            'data': data
        }
        return jsonify(result)
    except Exception as e:
        logger.error(f"Error en MCP: {e}")
        return jsonify({'error': 'Error en el análisis MCP'}), 500

# TTS básico integrado
@app.route('/api/tts/speak', methods=['POST'])
def basic_tts():
    try:
        data = request.get_json()
        text = data.get('text', '')
        
        # Simulación de respuesta TTS
        result = {
            'status': 'success',
            'message': f'Texto procesado para TTS: {text[:50]}...'
        }
        return jsonify(result)
    except Exception as e:
        logger.error(f"Error en TTS: {e}")
        return jsonify({'error': 'Error en el servicio TTS'}), 500

# Health check funcional
@app.route('/health', methods=['GET'])
def health_check():
    return jsonify({
        'status': 'healthy',
        'service': 'capibara6_integrated_server',
        'models': list(MODEL_CONFIGS.keys())
    })

if __name__ == '__main__':
    port = int(os.environ.get('PORT', 5001))
    app.run(host='0.0.0.0', port=port, debug=False)